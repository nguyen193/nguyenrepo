<link rel="stylesheet" href="css/cart.css">

<%- include("section/_header") %>
     <h2>Cart</h2>
     <% if(bills.length>0){ %>
     <form action="" method="post">
          <table class="table table-striped table-bordered table-hover">

               <thead>
                    <th>Product Name</th>
                    <th>Price</th>
               </thead>
               <tbody>
                    <% var index = 1 %>
                    <% for(var item of bills) { %>
                    <tr>
                         <td><%= item[0] %></td>
                         <td><%= item[1] %>$</td>
                    </tr>
                    <% } %>
               </tbody>

          </table>
          <div>
               <label>Total:</label>
               <label><%= totalprice %>$</label>
               <input type="hidden" name="totalprice" value="<%= totalprice %>">
          </div>
          <button type="submit" name="submitbutton" value="1">Purchase</button>

     </form>
     <% } else{ %>
          <label>Cart is currently empty.</label>
     <% } %>
     <div>
          <label id="status"><%= status %></label>
     </div>

<%- include("section/_footer") %>

<%- include("section/_header") %>

     <h2>Bills statistic</h2>
     <% if(data.length>0){ %>
     <table class="table table-striped table-bordered table-hover">

          <thead>
               <th>Title</th>
               <th>Price</th>
               <th>Buyer</th>
               <th>Date</th>
          </thead>
          <tbody>
               <% for(var item of data) { %>
               <tr>
                    <td><%= item.title %></td>
                    <td><%= item.price %>$</td>
                    <td><%= item.buyer %></td>
                    <td><%= item.date %></td>
               </tr>
               <% } %>
          </tbody>

     </table>
     <% } else{ %>
          <label>No bill has been made</label>
     <% } %>


<%- include("section/_footer") %>
